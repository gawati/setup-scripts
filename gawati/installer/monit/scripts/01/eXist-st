check process eXist-st with pidfile /var/run/wrapper.eXist-st.pid
	group application
	start program = "/usr/bin/systemctl start eXist-st" with timeout 60 seconds
	stop program  = "/usr/bin/systemctl stop eXist-st" with timeout 30 seconds
	if cpu > 80% for 2 cycles then alert
	if cpu > 60% for 3 cycles then alert
	if cpu > 90% for 4 cycles then alert
	if totalmem > 80% for 3 cycles then alert
	if totalmem > 90% for 5 cycles then alert
	if loadavg(5min) greater than 10 for 8 cycles then alert
	if failed port 10083 protocol http and request "/exist/apps/gawati-portal/" then restart
	if 3 restarts within 5 cycles then timeout
